<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_celebrate"
        android:layout_width="453dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/pixel" />

    <Spinner
        android:id="@+id/spinner_celebration"
        android:layout_width="246dp"
        android:layout_height="36dp"
        android:layout_below="@+id/imageView_celebrate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/tv_spinner_message"
        style="@style/CardView.Dark"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinner_celebration"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="7dp"
        android:text="@string/theme"
        android:textSize="16sp" />


</RelativeLayout>
